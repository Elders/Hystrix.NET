<?xml version="1.0" encoding="utf-8"?>
<configuration>
  <configSections>
    <section name="slf4net" type="slf4net.Configuration.SlfConfigurationSection, slf4net"/>
    <section name="nlog" type="NLog.Config.ConfigSectionHandler, NLog"/>
  </configSections>
  <appSettings>
    <add key="Hystrix.Plugin.IHystrixMetricsPublisher.Implementation" value="Hystrix.Contrib.ServoPublisher.ServoPublisher, Hystrix.Contrib.ServoPublisher"/>
  </appSettings>
  <startup>
    <supportedRuntime version="v4.0" sku=".NETFramework,Version=v4.6"/>
  </startup>
  <slf4net>
    <factory type="slf4net.NLog.NLogLoggerFactory, slf4net.NLog"/>
  </slf4net>
  <nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
    <targets>
      <target xsi:type="File" name="fileTarget" fileName="Log.txt" layout="${log4jxmlevent}"/>
      <target xsi:type="MethodCall" name="methodTarget" className="Hystrix.Example.MainWindow, Hystrix.Example" methodName="LogStatic">
        <parameter layout="${level}"/>
        <parameter layout="${message}"/>
      </target>
    </targets>
    <rules>
      <logger writeTo="fileTarget, methodTarget"/>
    </rules>
  </nlog>
</configuration>
